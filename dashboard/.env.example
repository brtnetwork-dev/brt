# Database Configuration
# Vercel Postgres connection strings
# These are automatically set when you connect Vercel Postgres to your project

# Standard connection string
POSTGRES_URL="postgresql://username:password@host:port/database"

# Connection string for Prisma
POSTGRES_PRISMA_URL="postgresql://username:password@host:port/database?pgbouncer=true&connection_limit=1"

# Direct connection (non-pooled)
POSTGRES_URL_NON_POOLING="postgresql://username:password@host:port/database"

# Additional environment variables (optional)
POSTGRES_USER="username"
POSTGRES_HOST="host"
POSTGRES_PASSWORD="password"
POSTGRES_DATABASE="database"

# Next.js Configuration (optional)
NEXT_PUBLIC_API_URL="https://your-dashboard.vercel.app"
