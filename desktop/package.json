{
  "name": "brt-desktop",
  "version": "1.0.0",
  "description": "BRT desktop application",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-forge start",
    "build": "tsc && electron-builder --config electron-builder.config.js",
    "build:win:arm64": "tsc && electron-builder --config electron-builder.config.js --win portable --arm64",
    "build:win:x64": "tsc && electron-builder --config electron-builder.config.js --win portable --x64",
    "build:mac": "tsc && electron-builder --config electron-builder.config.js --mac",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "mining",
    "dashboard"
  ],
  "author": "BRT Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "7zip-bin": "^5.2.0",
    "electron": "28.3.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
